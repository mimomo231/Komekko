<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF"
    android:id="@+id/_rootLay"
    >



    <!--- ScrollView That contains video details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <!-- This layout will contain items by JAVA programatically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- Cover Section Starts-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/mainCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_backtoschool" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/tree_angle"
                    android:gravity="start|bottom"
                    android:paddingLeft="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="0dp"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </RelativeLayout>
            <!-- Cover Section ENDS ####################### -->

            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical">

                <com.example.komekko.ExpandableHeightGridView
                    android:id="@+id/mainGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:horizontalSpacing="10dp"
                    android:isScrollContainer="false"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <!--- **************************************** -->

    <LinearLayout
        android:id="@+id/layPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youTubePlayerView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="visible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/black"
            android:weightSum="100"
            >

            <ImageView
                android:id="@+id/imgPrevious"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:padding="5dp"
                android:src="@drawable/prev"
                android:layout_weight="25"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imgPlayPause"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:padding="5dp"
                android:src="@drawable/buffer"
                android:layout_weight="25"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_weight="25"
                android:src="@drawable/next"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imngClosePlayer"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:padding="5dp"
                android:src="@drawable/cross"
                android:layout_weight="25"
                android:clickable="true"
                android:tint="#FF0057"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                tools:ignore="UseAppTint"
                android:focusable="true" />
        </LinearLayout>

    </LinearLayout>

    <!-- ########## Bottom Nav Menu Start ########## -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/bot_menu"
        android:layout_alignParentBottom="true"/>
    <!-- ########## Bottom Nav Menu End ########## -->

</RelativeLayout>